<div class="small-12 medium-6 large-4 columns small-centered text-center login-stuff" style="margin-top:50px;">
  <h1>Social Network</h1>
  <h2>Forgot password?</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: "profile-card text-center radius", id:"form", autocomplete: "off"} ) do |f| %>
	<div class="banner" style="background-image:url(<%= asset_path 'banner.jpg' %>)"></div>
    <%= image_tag 'avatar.png',:class=> "profile-feed" %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<div class="pm-step"><p>Enter your email to reset your password.</p>
    	<%= f.input :email, :required => true, :autofocus => true %>
    </div>
  </div>
  <div class="message-submit" style="display: none;">
    <h3>Email sent!</h3>
  </div>
  <div id="description">
    <p class="muted"><input type="button" id="navigation" value="next"> or press tab</p>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
