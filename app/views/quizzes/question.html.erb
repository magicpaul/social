<div class="large-12 columns">
    <div class="card">
        <!-- Create a form using the questions controller and the answer method. When this is submitted it will pass the form data to this method. -->
        <%= form_tag({:controller => "quizzes", :action => "answer"}, class: "ac-custom ac-checkbox ac-checkmark") do %>
            <!-- Get display question -->
            <h3 id="question"><%= @question.content %></h3>
            <!-- If there's an attachment, display it too -->
            <% if @question.attachment? %>
              <%= image_tag @question.attachment.url %>
            <% end %>
            <ul>
            <!-- Display each answer as a radio button -->
           <% @question.answers.each do |answer| %>
                <li>
                <%= radio_button_tag(:answer, answer.id, checked = false, class:"check_this") %>
                <%= label_tag("answer_".concat(answer.id.to_s).to_sym, answer.content) %>
                </li>
          <% end %>
            </ul>
          <div class="row">
            <div class="small-12 large-8 columns">
                <div class="progress round">
                  <!-- Display a progress bar using the @progress variable calculated in the controller -->
                  <span class="meter" style="width: <%= @progress %>%"></span>
                </div>
            </div>
            <div class="small-12 large-2 columns">
                <%= submit_tag("Continue", :class => "expand round success disabled button") %>
            </div>

          </div>
        <% end %>
    </div>
</div>
